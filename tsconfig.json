{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "react",
            "howler"
        ]
    }
}